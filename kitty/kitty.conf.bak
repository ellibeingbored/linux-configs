# FONT
font_family        JetBrainsMono Nerd Font
bold_font          auto
italic_font        auto
bold_italic_font   auto
font_size          12

# COLOR SCHEME
background_opacity 0.9
background_blur 0
include current-theme.conf
window_margin_width 2
window_margin_width 2

# CURSOR
cursor_shape block
shell_integration no-cursor

# TAB
tab_bar_edge top

# MISC
enable_audio_bell no
force_ltr no
detect_urls yes
editor /usr/bin/nvim
